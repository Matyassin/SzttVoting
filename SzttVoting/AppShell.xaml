<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SzttVoting.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SzttVoting"
    Shell.BackgroundColor="Bisque"
    Title="Best Voting System in the World!">
    
    <Shell.TitleView>
        <Grid>
        <Label Text="Let's vote some :)" 
               FontSize="30"  
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Start" 
               VerticalOptions="Center"/>
        <Label Text=""
               FontSize="30"  
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="End" 
               VerticalOptions="Center"/>
        </Grid>
    </Shell.TitleView>
    
    <ShellContent 
        Title="Voting Home" 
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>