<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SzttVoting.View.RegisterView">

        <VerticalStackLayout HorizontalOptions="Center" Padding="50" WidthRequest="700" Margin="20">
            <Label Text="Register" FontSize="100" HorizontalOptions="Center"/>
            <Entry Placeholder="Email" 
                   Text="{Binding EmailEntry, Mode=TwoWay}"
                   Unfocused="Email_OnUnfocused"/>
            
            <Label Text="{Binding EmailWarningText}" 
                   IsVisible="{Binding IsEmailWarning}" 
                   TextColor="{Binding EmailWarningColor}"/>
            
            <Entry Placeholder="Password" 
                   Text="{Binding PasswordEntry}" IsPassword="True"
                   Unfocused="Password_OnUnfocused"/>
            
            <Label Text="{Binding PasswordWarningText}" 
                   IsVisible="{Binding IsPasswordWarning}" 
                   TextColor="{Binding PasswordWarningColor}"/>
            
            <Button x:Name="LoginButton" Text="Register!" 
                    Clicked="Register_OnClicked" IsEnabled="True"/>
            
            <Button Text="Have an account? Log in here!" 
                    TextColor="BlueViolet" 
                    BackgroundColor="Transparent"
                    Clicked="Button_OnClicked"/>
        </VerticalStackLayout>

</ContentPage>
