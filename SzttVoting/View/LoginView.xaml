<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SzttVoting.View.LoginView">
    
        <VerticalStackLayout HorizontalOptions="Center" Padding="50">
            <Label Text="Login" FontSize="100"/>
            <Entry Placeholder="Email" Text="{Binding EmailEntry, Mode=TwoWay}"/>
            <Entry Placeholder="Password" Text="{Binding PasswordEntry}" IsPassword="True"/>
            <Button x:Name="LoginButton" Text="Login!" />
            <Button Text="Don't have an account? Sign up!" TextColor="BlueViolet" BackgroundColor="Transparent"/>
        </VerticalStackLayout>

</ContentView>
