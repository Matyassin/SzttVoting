<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:View="clr-namespace:SzttVoting.View"
             x:Class="SzttVoting.View.LoginView">
    
        <VerticalStackLayout HorizontalOptions="Center" Padding="50" WidthRequest="700" Margin="20">
            <Label Text="Login" FontSize="100" HorizontalOptions="Center"/>
            <Entry Placeholder="Email" Text="{Binding EmailEntry, Mode=TwoWay}"/>
            <Label Text="{Binding EmailErrorText}" IsVisible="{Binding IsEmailError}" TextColor="Red"/>
            <Entry Placeholder="Password" Text="{Binding PasswordEntry}" IsPassword="True"/>
            <Label Text="{Binding PasswordErrorText}" IsVisible="{Binding IsPasswordError}" TextColor="Red"/>
            <Button x:Name="LoginButton" Text="Login!" 
                    Clicked="LoginButton_OnClicked"/>
            <Button Text="Don't have an account? Sign up!" 
                    TextColor="BlueViolet" 
                    BackgroundColor="Transparent"
                    Clicked="ToRegisterButton_OnClicked"/>
        </VerticalStackLayout>

</ContentPage>
