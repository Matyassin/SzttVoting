<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="View.NewPollView"
             xmlns:ViewModels="clr-namespace:ViewModel.UserViewModels;assembly=ViewModel"
             NavigationPage.HasBackButton="False">
    
    <Border Margin="20"
        StrokeShape="RoundRectangle 40"
        StrokeThickness="0"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Padding="0"
        BackgroundColor="SlateGray">

    <Border.Shadow>
        <Shadow Brush="Black" Offset="0,15" Radius="40" Opacity="0.4" />
    </Border.Shadow>


    <ScrollView MaximumWidthRequest="1500">
        <Grid RowDefinitions="Auto, *, Auto"
              Padding="50"
              RowSpacing="20"
              HeightRequest="700"> <Label Grid.Row="0"
                   Text="Create New Vote"
                   TextColor="White"
                   FontSize="40"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center" />

            <HorizontalStackLayout Grid.Row="1">
                <HorizontalStackLayout Spacing="25">
                    <VerticalStackLayout WidthRequest="500" Spacing="25"> <VerticalStackLayout Spacing="8">
                            <Label Text="Vote Title" TextColor="#E0E0E0" FontSize="18" Margin="5,0,0,0"/>
                            <Border StrokeShape="RoundRectangle 15" BackgroundColor="#20FFFFFF" StrokeThickness="0" HeightRequest="60">
                                <Entry Text="{Binding Title}" 
                                       Placeholder="e.g. Best Framework?" 
                                       PlaceholderColor="#80FFFFFF"
                                       TextColor="White" FontSize="20" Margin="15,0"/>
                            </Border>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Description" TextColor="#E0E0E0" FontSize="18" Margin="5,0,0,0"/>
                            <Border StrokeShape="RoundRectangle 15" BackgroundColor="#20FFFFFF" StrokeThickness="0" HeightRequest="120">
                                <Editor Text="{Binding Description}" 
                                        Placeholder="Explain what this vote is about..." 
                                        PlaceholderColor="#80FFFFFF"
                                        TextColor="White" FontSize="18" Margin="15,10"
                                        AutoSize="TextChanges"/>
                            </Border>
                        </VerticalStackLayout>

                        <VerticalStackLayout Spacing="8">
                            <Label Text="Voting Deadline" TextColor="#E0E0E0" FontSize="18" Margin="5,0,0,0"/>
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                                <Border Grid.Column="0" StrokeShape="RoundRectangle 15" BackgroundColor="#20FFFFFF" StrokeThickness="0" HeightRequest="60">
                                    <DatePicker Date="{Binding DeadlineDate}" 
                                                TextColor="White" 
                                                FontSize="18"
                                                Margin="15,0"
                                                HorizontalOptions="Fill"/>
                                </Border>
                                <Border Grid.Column="1" StrokeShape="RoundRectangle 15" BackgroundColor="#20FFFFFF" StrokeThickness="0" HeightRequest="60">
                                    <TimePicker Time="{Binding DeadlineTime}" 
                                                TextColor="White" 
                                                FontSize="18"
                                                Margin="15,0"
                                                HorizontalOptions="Fill"/>
                                </Border>
                            </Grid>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                
                    <VerticalStackLayout WidthRequest="500" Spacing="15">
                        <Label Text="Vote Options" TextColor="White" FontSize="22" FontAttributes="Bold"/>

                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding Options}" Spacing="15">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                                        <Border Grid.Column="0" StrokeShape="RoundRectangle 15" BackgroundColor="#20FFFFFF" StrokeThickness="0" HeightRequest="55">
                                            <Entry Text="{Binding Text}" 
                                                   Placeholder="Option text..." 
                                                   PlaceholderColor="#80FFFFFF"
                                                   TextColor="White" 
                                                   FontSize="18" 
                                                   Margin="15,0"/>
                                        </Border>
                                    
                                        <Button Grid.Column="1"
                                                Text="âœ•"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ViewModels:NewPollViewModel}}, Path=RemoveOptionCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="#40FF0000"
                                                TextColor="White"
                                                HeightRequest="55"
                                                WidthRequest="55"
                                                CornerRadius="15"/>
                                    </Grid>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>

                        <Button Text="+ Add Option"
                                Command="{Binding AddOptionCommand}"
                                BackgroundColor="Transparent"
                                BorderColor="White"
                                BorderWidth="1"
                                TextColor="White"
                                HeightRequest="50"
                                CornerRadius="15"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </HorizontalStackLayout>

            <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="20" Margin="0,10,0,0">
                <Button Grid.Column="0"
                        Text="Cancel"
                        BackgroundColor="#30000000"
                        BorderColor="White"
                        BorderWidth="2"
                        TextColor="White"
                        FontSize="20"
                        HeightRequest="60"
                        CornerRadius="20"
                        Clicked="CancelButton_OnClicked"/>

                <Button Grid.Column="1"
                        Text="Publish Vote"
                        BackgroundColor="White"
                        FontAttributes="Bold"
                        FontSize="20"
                        CornerRadius="20"
                        HeightRequest="60"
                        TextColor="DarkViolet"
                        Clicked="PublishButton_OnClicked"/>
            </Grid>
        </Grid>
    </ScrollView>
</Border>
</ContentPage>