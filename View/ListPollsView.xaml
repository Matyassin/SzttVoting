<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="View.ListPollsView">

    <ScrollView WidthRequest="1000">
        <VerticalStackLayout Spacing="40">
            
            <!-- MY POLLS -->
            <VerticalStackLayout Spacing="20">
                <Label Text="My Polls"
                       FontSize="26"
                       TextColor="White"
                       Padding="20,0,0,0"/>

                <CollectionView ItemsSource="{Binding UsersPolls}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border StrokeShape="RoundRectangle 40"
                                    StrokeThickness="0"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    Padding="25"
                                    BackgroundColor="SlateGray">
                                <Border.Shadow>
                                    <Shadow Brush="Black"
                                            Offset="0,15"
                                            Radius="40"
                                            Opacity="0.4" />
                                </Border.Shadow>

                                <Grid ColumnDefinitions="*, Auto, Auto">
                                    <VerticalStackLayout Grid.Column="0">
                                        <Label Text="{Binding Title}"
                                               FontSize="18"
                                               TextColor="White"/>

                                        <Label Text="{Binding Description}"
                                               FontSize="14"
                                               TextColor="White"/>
                                    </VerticalStackLayout>

                                    <Button Grid.Column="1"
                                            Text="Vote"
                                            Margin="10,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            
            
            <!-- OTHER POLLS -->
            <VerticalStackLayout Spacing="20">
                <Label Text="Other Polls"
                       FontSize="26"
                       TextColor="White"
                       Padding="20,0,0,0"/>

                <CollectionView ItemsSource="{Binding OthersPolls}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border StrokeShape="RoundRectangle 40"
                                    StrokeThickness="0"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    Padding="25"
                                    BackgroundColor="SlateGray">
                                <Border.Shadow>
                                    <Shadow Brush="Black"
                                            Offset="0,15"
                                            Radius="40"
                                            Opacity="0.4" />
                                </Border.Shadow>

                                <Grid ColumnDefinitions="*, Auto, Auto">
                                    <VerticalStackLayout Grid.Column="0">
                                        <Label Text="{Binding Title}"
                                               FontSize="18"
                                               TextColor="White"/>

                                        <Label Text="{Binding Description}"
                                               FontSize="14"
                                               TextColor="White"/>
                                    </VerticalStackLayout>

                                    <Button Grid.Column="1"
                                            Text="Vote"
                                            Margin="10,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
