<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="View.AdminViews.ListUsersView">

    <ScrollView WidthRequest="1000">
        <CollectionView ItemsSource="{Binding Users}">
            <CollectionView.ItemTemplate>
                <DataTemplate>

                    <Border StrokeShape="RoundRectangle 40"
                            StrokeThickness="0"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Padding="20"
                            BackgroundColor="SlateGray">

                        <Border.Shadow>
                            <Shadow Brush="Black" Offset="0,15" Radius="40" Opacity="0.4" />
                        </Border.Shadow>

                        <Grid ColumnDefinitions="*, Auto, Auto">

                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding Username}"
                                       FontSize="18"
                                       TextColor="White"/>

                                <Label Text="{Binding Email}"
                                       FontSize="14"
                                       TextColor="White"/>

                            </VerticalStackLayout>

                            <Button Grid.Column="1"
                                    Text="Block"
                                    Margin="10, 0"
                                    x:Name="Block_Btn"
                                    Clicked="Block_Btn_Clicked"/>

                            <Button Grid.Column="2"
                                    Text="Unblock"
                                    Margin="10, 0"
                                    x:Name="Unblock_Btn"
                                    Clicked="Unblock_Btn_Clicked"/>

                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
</ContentPage>