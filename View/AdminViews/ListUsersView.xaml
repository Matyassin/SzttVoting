<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="ListUsersPage"
             x:Class="View.AdminViews.ListUsersView"
             xmlns:viewModel="clr-namespace:ViewModel;assembly=ViewModel">

    <ScrollView WidthRequest="1000">
        <CollectionView ItemsSource="{Binding Users}">
            <CollectionView.ItemTemplate>
                <DataTemplate>

                    <Border StrokeShape="RoundRectangle 40"
                            StrokeThickness="0"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Padding="25"
                            BackgroundColor="SlateGray">

                        <Border.Shadow>
                            <Shadow Brush="Black" Offset="0,15" Radius="40" Opacity="0.4"/>
                        </Border.Shadow>

                        <Grid ColumnDefinitions="*, Auto, Auto">

                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding Username}"
                                       FontSize="18"
                                       TextColor="White"/>

                                <Label Text="{Binding Email}"
                                       FontSize="14"
                                       TextColor="White"/>

                            </VerticalStackLayout>

                            <Button Grid.Column="1"
                                    Margin="10, 0"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:ListUsersViewModel}}, Path=ToggleBlockCommand}"
                                    CommandParameter="{Binding .}"
                                    WidthRequest="100">
                                
                                <Button.Triggers>
                                    <DataTrigger TargetType="Button" Binding="{Binding IsBlocked}" Value="True">
                                        <Setter Property="Text" Value="Unblock" />
                                    </DataTrigger>

                                    <DataTrigger TargetType="Button" Binding="{Binding IsBlocked}" Value="False">
                                        <Setter Property="Text" Value="Block" />
                                    </DataTrigger>
                                </Button.Triggers>
                            </Button>

                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
</ContentPage>