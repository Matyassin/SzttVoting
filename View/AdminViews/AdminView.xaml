<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:View="clr-namespace:View"
             NavigationPage.HasBackButton="False"
             x:Class="View.AdminView">

    <VerticalStackLayout>
        <Grid BackgroundColor="SlateGray"
              Padding="10"
              ColumnDefinitions="*, Auto">

        <Label Grid.Column="0"
                   Text="Welcome, admin!"
                   FontSize="15"
                   VerticalOptions="Center"/>

        <Button Grid.Column="1"
                    Text="Sign out!"
                    TextColor="BlueViolet"
                    BackgroundColor="Transparent"
                    VerticalOptions="Center"
                    Clicked="Signout_OnClickedAsync"/>
        </Grid>

        <VerticalStackLayout Padding="500,50,500,0" Spacing="15">
            <Button Text="Create Vote"
                    Clicked="CreateNewVote_OnClicked"/>

            <Button Text="Ongoing Votes"
                    Clicked="ListOngoingVotes_OnClicked"/>

            <Button Text="View Users"
                    Clicked="ListUsers_OnClicked"/>

        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>
